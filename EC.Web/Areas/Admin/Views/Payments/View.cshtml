@model PaymentsViewModels

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Payment Details</h1>
    </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="index" asp-controller="dashboard">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="index" asp-controller="Payments">Payment Details</a></li>
                    <li class="breadcrumb-item active">Detail</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>



<div class="container-fluid">
    <section class="content" data-table="optionValues">
        <div class="box">
            <div class="box-body">
                <table class="table table-hover">
                    <tr>
                        <th scope="row">Name</th>
                        <td>
                            @Model.Name
                        </td>
                    </tr>
                    <tr>
                        <th>Mobile</th>
                        <td>@Model.Mobile</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Order Id</th>
                        <td>@Model.OrderId</td>
                    </tr>
                    <tr>
                        <th>Transaction Id</th>
                        <td>@Model.TransactionId</td>
                    </tr>
                    <tr>
                        <th>Method Type</th>
                        <td>@Model.PaymentMethod</td>
                    </tr>
                    <tr>
                        <th>Payment Status</th>
                        <td>@Model.PaymentStatus</td>
                    </tr>
                    <tr>
                        <th>Currency Code</th>
                        <td>@Model.CurrencyCode</td>
                    </tr>
                    <tr>
                        <th>Amount</th>
                        <td>@Model.Amount</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="box-header">
            <a href="@Url.Action("Index", "Payments")" class="btn btn-warning btn-flat pull-right mr-lg-3" title="Back">
                <i class="fa fa-fw fa-chevron-circle-left"></i> Back
            </a>
        </div>
    </section>
</div>