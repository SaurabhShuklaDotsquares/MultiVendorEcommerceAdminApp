@model ReviewsViewModel


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Manage Reviews</h1>
                <h5>Here you can view review detail</h5>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="index" asp-controller="dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="index" asp-controller="Reviews">Manage Reviews</a></li>
                    <li class="breadcrumb-item active">Detail</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<section class="content" data-table="optionValues">
    <div class="box">       
        <div class="box-body">
            <table class="table table-hover table-striped">
                <tbody>
                    <tr>
                        <th>User</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th>Product</th>
                        <td>@Model.Productname</td>
                    </tr>
                    <tr>
                        <th>Rating</th>
                        <td>@Model.Rating</td>
                    </tr>
                    <tr>
                        <th>Comment</th>
                        <td>@Model.Comment</td>
                    </tr>
                    <tr>
                        <th>Posted On</th>
                        <td>@Model.CreatedAt</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>@Model.StatusView</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="box-header">
            <a href="@Url.Action("index","Reviews")" class="btn btn-warning btn-flat pull-right mr-lg-3" title="Back"><i class="fa fa-fw fa-chevron-circle-left"></i> Back</a>
        </div><br />
    </div>
</section>
