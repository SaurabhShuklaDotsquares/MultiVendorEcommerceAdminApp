@model ShippingViewModel

<div class="page-wrapper width">
    <div class="page-breadcrumb pl-0">
        <div class="row">
            <div class="col-5 padding-25">
                <h4 class="page-title">Shipping  Manager</h4>
            </div>
            <div class="col-7 align-self-center">
                <div class="d-flex align-items-center justify-content-end">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index","dashboard")">Dashboard</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index","Shipping")">Shipping manager</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Detail</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <section class="content mt-5" data-table="optionValues">
        <div class="box">
            <div class="box-body">
                <table class="table table-hover table-striped">
                    <tbody>
                        
                        <tr>
                            <th>Minimum order Amount</th>
                            <td>@Model.MinimumOrderAmount</td>
                        </tr>
                        <tr>
                            <th>Maximum Order Amount</th>
                            <td>@Model.MaximumOrderAmount</td>
                        </tr>
                        <tr>
                            <th>Shipping charges</th>
                            <td>@Model.ShippingCharge</td>
                        </tr>

                        <tr>
                            <th>Status</th>
                            @{
                                @if (Model.Status == true)
                                {
                                    <td>Active</td>
                                }
                                else
                                {
                                    <td>InActive</td>
                                }
                            }
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="box-header">
                <a href="@Url.Action("Index","Shipping")" class="btn btn-warning btn-flat pull-right mr-lg-3" title="Back"><i class="fa fa-fw fa-chevron-circle-left"></i> Back</a>
            </div><br />
        </div>
    </section>
    
</div>
