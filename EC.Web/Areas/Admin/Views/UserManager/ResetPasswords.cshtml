@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset your password?";
    Layout = "~/Areas/admin/Views/shared/_ExternalLayout.cshtml";
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb" style="text-align: center;">

        <div class="login-logo">
            <img src="/Uploads/N7RtVhMksRzr7d4BCTWhTqgyKbBUfGFX7J7sRP1U.png"
                 alt="Coch me PTY"
                 class="brand-image"
                 style="opacity: .8"><br />
            <b>Customer</b> Manager
       </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-16">
                <div class="card" style="width:30rem; height:15rem;">
                    <div class="card-body pt-lg-5">
                        <partial name="_Notification" />
                        <!-- <h4 class="card-title">General Form</h4>
                        <h6 class="card-subtitle"> All with bootstrap element classies </h6> -->
                        <form method="POST" action="@Url.Action("ResetPasswords","UserManager")" accept-charset="UTF-8" enctype="multipart/form-data">
                            <input name="_token" type="hidden" value="fpM693NM5eRZle2sNCk0CQuMrETLNbQoNsQxDw3W">
                            <input type="hidden" asp-for="Id" value="@Model.Id" />
                            <div class="row">
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="parent">Password <span style="color: #cc0000;">*</span></label>
                                        <div class="input-group">
                                            <input type="password" asp-for="Password" class="form-control" id="txtpassword" />
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fa fa-fw fa-eye  field_icon" id="spn1" onclick="myFunction()"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <span asp-validation-for="Password" class="field-validation-error"> </span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="parent">Confirm Password <span style="color: #cc0000;">*</span></label>
                                        <div class="input-group">
                                            <input type="password" asp-for="ConfirmPassword" class="form-control" id="txtcnfrmpassword" />
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fa fa-fw fa-eye  field_icon" id="spn2" onclick="myFunctionConfrm()"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="field-validation-error"> </span>
                                </div>
                            </div>

                            <!-- New Selection for Featured Selection of a Category -->
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-fw fa-save"></i>
                                Update
                            </button>
                            <a href="@Url.Action("Index","Account")" class="btn btn-warning btn-flat" title="Back"><i class="fa fa-fw fa-chevron-circle-left"></i> Back</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- row -->
    </div>
</div>

<script>
    function myFunction() {
        var x = document.getElementById("txtpassword");
        if (x.type === "password") {
            x.type = "text";
            $('#spn1').toggleClass("fa-eye-slash");
        }
        else {
            x.type = "password";
            $('#spn1').toggleClass("fa-eye");
        }
    }
</script>

<script>

    function myFunctionConfrm() {
        var x = document.getElementById("txtcnfrmpassword");
        if (x.type === "password") {
            x.type = "text";
            $('#spn2').toggleClass("fa-eye-slash");
        }
        else {
            x.type = "password";
            $('#spn2').toggleClass("fa-eye");
        }
    }
</script>