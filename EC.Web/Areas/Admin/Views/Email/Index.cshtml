@{
    ViewData["Title"] = "Email Manager";
}
@section styles{
    <link href="~/lib/alertifyjs/css/alertify.css" rel="stylesheet" />
    <link href="~/lib/alertifyjs/css/themes/default.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/DataTables-1.10.20/css/dataTables.bootstrap4.min.css" />
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Email Manager</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="index" asp-controller="dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">Email Manager</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
     <partial name="_Notification" />
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                 <div class="card-header">
                    <div class="card-tools">
                        <a id="CreateEdit" data-tooltip="tooltip" title="Add New Emails" href="@Url.Action("CreateEdit","Email")" class="btn btn-success btn-sm pull-right">
                            <i class="fa fa-plus"></i> Add New
                        </a>
                    </div>
                </div>
                <div class="card-body table-responsive">
                    <table id="grid-Email" class="table table-bordered table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>Id</th>                                 @* [0]*@
                                <th width="2%">#</th>                       @* [1]*@
                                <th>Title</th>                               @* [2]*@
                                <th>Subject</th>                            @* [3]*@
                                <th>Slug</th>                               @* [4]*@
                                <th>Created At</th>                           @* [5]*@
                                <th>Updated At</th>                           @* [6]*@
                                <th width="150px">Action</th>                             @* [7]*@
                            </tr>
                        </thead>
                        <tbody></tbody>
                        <tfoot></tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
@{
   
    var deleteModel = new Modal { ID = "modal-delete-email", AreaLabeledId = "modal-action-delete-label", Size = ModalSize.Medium };
}
<partial name="_Modal" model="deleteModel" />
@section Scripts{
    <script>
        $(document).ready(function () {
            $('[data-tooltip="tooltip"]').tooltip();
        });
    </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap-switch.js"></script>
    <script src="~/lib/DataTables-1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/DataTables-1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/view/templateemail/index.js"></script>
}




