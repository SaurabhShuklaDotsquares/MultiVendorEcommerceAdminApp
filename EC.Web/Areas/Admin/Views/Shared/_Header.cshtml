<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#"><i class="fa fa-bars"></i></a>
        </li>
    </ul>
    
    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown custom-snav-list">
            <a class="nav-link" data-toggle="dropdown" href="#">
                @if (CurrentUser.Gender == (int)GenderEnum.Male)
                {
                    <img width="128"  class="user-image img-circle elevation-2"
                         src="~/images/avatar5.png"
                         alt="User profile picture">
                }
                else
                {
                    <img width="128" class="user-image img-circle elevation-2"
                         src="~/images/avatar2.png"
                         alt="User profile picture">
                }
            </a>
            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right top-dropdown-setting">
                @*<a href='@Url.Action("Index","ManageProfile")' class="dropdown-item">
                    <i class="fa fa-user mr-2"></i> My Account
                </a>*@
                @*<a href="@Url.Action("ChangePassword", "Account", new { id = CurrentUser.Id})" class="dropdown-item">
                    <i class="fa fa-lock mr-2"></i> Change Password
                </a>*@
                <div class="dropdown-divider"></div>
                @if (CurrentUser.IsAuthenticated)
                {
                    if (CurrentUser.Role.Equals("Administrator"))
                    {
                        <a asp-action="index" asp-controller="Dashboard" asp-area="Admin" class="d-block">@(
                    !string.IsNullOrEmpty(CurrentUser.Firstname) ? CurrentUser.Firstname + " " + CurrentUser.Lastname : ""
                    )</a>
                    }
                    else
                    {
                        <a href="@SiteKeys.Domain" class="d-block">Home</a>
                    }
                }
                <a asp-action="signout" asp-controller="account" asp-area="admin" class="dropdown-item logoutbtn">
                    <i class="fas fa-sign-out-alt mr-2"></i> Sign out
                </a>
            </div>
        </li>
    </ul>
</nav>
<!-- /.navbar -->
