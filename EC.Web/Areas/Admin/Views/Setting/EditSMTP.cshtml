@{
    ViewData["Title"] = "SMTP Detail";
}


@model SettingViewModels


<div class="page-wrapper">
    <div class="page-breadcrumb">
         <partial name="_Notification" />
        <div class="row">
            <div class="col-5 align-self-center">
                <h4 class="page-title">SMTP Detail</h4>
            </div>
            <div class="col-7 align-self-center">
                <div class="d-flex align-items-center justify-content-end">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index","dashboard")">Dashboard</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">SMTP Detail</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <form method="POST" action="@Url.Action("EditSMTP","Setting")" accept-charset="UTF-8" enctype="multipart/form-data">
            <input name="_token" type="hidden" value="dqtJJhNiC15lCvayVFpiijeBHVO6TI5ubTp5BRqf">
            <div class="row">
                <div class="col-md-12">
                    <!-- SELECT2 EXAMPLE -->
                    <div class="card card-default">
                        <div class="card-body">
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group required ">
                                            <label>Constant/Slug</label>
                                            @Html.TextBoxFor(m=>m.SMTP_EMAIL_HOSTSlug,new {@class="form-control",@placeholder="Enter Name",@readonly="readonly" })
                                          @*  <input class="form-control" readonly="readonly" asp-for="SMTP_EMAIL_HOSTSlug" type="text" value="">*@
                                            <input class="form-control" name="setting[0][field_type]" type="hidden" value="text">
                                            <input class="form-control" name="setting[0][manager]" type="hidden" value="smtp">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group required ">
                                            <label for="SMTP_EMAIL_HOST">Config Value <span class="text-danger">*</span></label>
                                            <input class="form-control stop_first_space" id="SMTP_EMAIL_HOST" placeholder="SMTP_EMAIL_HOST" maxlength="300" asp-for="SMTP_EMAIL_HOST" type="text">
                                        </div>
                                    </div>
                                </div> 

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group required ">
                                            <label>Constant/Slug</label>
                                        @*    <input class="form-control" readonly="readonly" asp-for="SMTP_USERNAMESlug" type="text" value="">*@
                                            @Html.TextBoxFor(m=>m.SMTP_USERNAMESlug,new {@class="form-control",@readonly="readonly" })
                                            <input class="form-control" name="setting[1][field_type]" type="hidden" value="text">
                                            <input class="form-control" name="setting[1][manager]" type="hidden" value="smtp">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group required ">
                                            <label for="SMTP_USERNAME">Config Value <span class="text-danger">*</span></label>
                                            <input class="form-control stop_first_space" id="SMTP_USERNAME" placeholder="SMTP_USERNAME" maxlength="300" asp-for="SMTP_USERNAME" type="text">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group required ">
                                            <label>Constant/Slug</label>
                                            @*<input class="form-control" readonly="readonly" asp-for="SMTP_PASSWORDSlug" type="text" value="">*@
                                            @Html.TextBoxFor(m=>m.SMTP_PASSWORDSlug,new {@class="form-control",@readonly="readonly" })

                                            <input class="form-control" name="setting[2][field_type]" type="hidden" value="text">
                                            <input class="form-control" name="setting[2][manager]" type="hidden" value="smtp">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group required ">
                                            <label for="SMTP_PASSWORD">Config Value <span class="text-danger">*</span></label>

                                            <input class="form-control stop_first_space" id="SMTP_PASSWORD" placeholder="SMTP_PASSWORD" maxlength="300" asp-for="SMTP_PASSWORD" type="text">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group required ">
                                            <label>Constant/Slug</label>
                                            @*<input class="form-control" readonly="readonly" asp-for="SMTP_PORTSlug" type="text" value="">*@
                                            @Html.TextBoxFor(m=>m.SMTP_PORTSlug,new {@class="form-control",@readonly="readonly" })
                                            <input class="form-control" name="setting[3][field_type]" type="hidden" value="text">
                                            <input class="form-control" name="setting[3][manager]" type="hidden" value="smtp">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group required ">
                                            <label for="SMTP_PORT">Config Value <span class="text-danger">*</span></label>
                                            <input class="form-control stop_first_space" id="SMTP_PORT" placeholder="SMTP_PORT" maxlength="300" asp-for="SMTP_PORT" type="text">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary"> <i class="fa fa-fw fa-save"></i>Submit</button>
                            <a href="@Url.Action("Index","dashboard")" class="btn btn-warning btn-flat" title="Back"><i class="fa fa-fw fa-chevron-circle-left"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
