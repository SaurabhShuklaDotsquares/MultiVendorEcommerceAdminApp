@{
    ViewData["Title"] = "Logo/Favicon Icon";
}

@model SettingViewModels

<div class="page-wrapper">
    <!-- Content Header (Page header) -->
    <div class="page-breadcrumb">
        <partial name="_Notification" />
        <div class="row">
            <div class="col-5 align-self-center">
                <h4 class="page-title">Logo/Favicon Icon</h4>
            </div>
            <div class="col-7 align-self-center">
                <div class="d-flex align-items-center justify-content-end">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="">Dashboard</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Website logos</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card settings">
                    <div class="card-header border d-flex justify-content-between" style=" background-color:white;">
                        <h4 class="card-title">Logo/Favicon</h4>
                    </div>
                    <div class="card-body">
                        @*<small id="emailHelp" class="form-text text-muted"><b>Note: </b>Accepted file only jpg, jpeg, png, svg and size must be less than 2mb.</small>*@
                        <!-- /.box-header -->
                        <form method="post" enctype="multipart/form-data" accept-charset="utf-8" role="form" action="@Url.Action("Create","Setting")">
                            <input type="hidden" name="_token" value="dqtJJhNiC15lCvayVFpiijeBHVO6TI5ubTp5BRqf">                       
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <table class="table table-striped table-bordered" id="tab-theme-files">
                                            <thead>
                                                <tr>
                                                    <th>Constant/Slug</th>
                                                    <th width="17%">Config Value</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                <tr id="file-row0" class="row-2">
                                                    <td>
                                                        <div class="form-group">
                                                            <div class="input text required">
                                                                <input class="form-control" readonly asp-for="MAIN_LOGOSlug" type="text">
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="thumbimage">
                                                            <div id="preview-image-before-upload">
                                                                <img src="~/Uploads/@Model.MAIN_LOGOConfigValue" id="blah1" alt="your image" style="max-height:80px;">
                                                            </div>
                                                        </div>
                                                        <br/>
                                                        <input type="file" accept="image/*" type="file" id="files" asp-for="MAIN_LOGOConfigValue1" onchange="document.getElementById('blah1').src = window.URL.createObjectURL(this.files[0])">
                                                    </td>
                                                    <td class="form-inline">
                                                    </td>
                                                </tr>
                                                <tr id="file-row1" class="row-3">
                                                    <td>
                                                        <div class="form-group">
                                                            <div class="input text required">
                                                                <input class="form-control" readonly asp-for="MAIN_FAVICONSlug" type="text">
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="thumbimage">
                                                            <div id="preview-image-before-upload">
                                                                <img src="~/Uploads/@Model.MAIN_FAVICONConfigValue" alt="your image" style="max-height:80px;" id="blah">
                                                            </div>
                                                        </div>
                                                        <br />
                                                        <input accept="image/*" type="file" id="files" asp-for="MAIN_FAVICONConfigValue1" onchange="document.getElementById('blah').src = window.URL.createObjectURL(this.files[0])" />
                                                       
                                                    </td>
                                                    <td class="form-inline">
                                                    </td>
                                                </tr>
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <td colspan="2"></td>
                                                    <td>
                                                      
                                                    </td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div><!-- /.box-body -->
                            <div class="box-footer">
                                <button class="btn btn-primary btn-flat" title="Submit" type="submit">
                                    <i class="fa fa-fw fa-save"></i> Submit
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="box box-warning">
                    <div class="box-header with-border">
                        <h3 class="box-title">
                            <i class="fa fa-exclamation"></i> Important Rules
                        </h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <p>
                            For each config settings that would be added to the system, make sure it has these
                            constant/slug:
                        </p>
                        <ul>
                            <li>
                                <small class="label bg-warning text-dark">
                                    MAIN_LOGO
                                </small>
                                - Will be replaced by logo from the admin settings.
                            </li>
                            <li>
                                <small class="label bg-warning text-dark">
                                    MAIN_FAVICON
                                </small>
                                - Will be replaced by favicon icon image from the admin settings.
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

