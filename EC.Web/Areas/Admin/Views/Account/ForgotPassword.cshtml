@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "~/Areas/admin/Views/shared/_ExternalLayout.cshtml";
}
<div class="login-logo">
    <img src="/Uploads/N7RtVhMksRzr7d4BCTWhTqgyKbBUfGFX7J7sRP1U.png"
         alt="Coch me PTY"
         class="brand-image"
         style="opacity: .8"><br />
    <b>Forgot</b> Password
</div>
<div class="card">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Enter your email</p>
        <partial name="~/areas\admin\views\shared\_notification.cshtml" />
        <form asp-action="ForgotPassword" asp-controller="Account" method="post">
            <div class="form-group row">
                <div class="col-sm-12">
                    <div class="input-group">
                        <input asp-for="Email" type="email" class="form-control " placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fa fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-7">
                    <p class="mb-1 forgot-pass text-left">
                        <a href="@Url.Action("index","Account")">Sign In</a>
                    </p>
                </div>
                <div class="col-5 forgot-btns">
                    <button type="submit" class="btn btn-primary btn-submit btn-block">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>



